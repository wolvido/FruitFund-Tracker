@model MonthlyDeficitViewModel

<script src="~/common.blocks/card/card__deficit-chart.js" defer></script>

<article class="card card_small">
    <h2 class="card__title">Total Deficit for [Month Name]</h2>

    <section class="card__body">
        <section class="card__info-wrapper">

            <div class="card__value card__deficit">₱@Model.MonthlyDeficit </div>

            <section>
                <div class="card__info card__info_contribution-deficit"> Contribution Deficit: ₱<strong>@Model.MonthlyContributionDeficit</strong></div>
                <div class="card__info card__info_loan"> Loan: ₱<strong>@Model.MonthlyRepaymentDeficit</strong></div>
                <div class="card__monthly-due" hidden>@Model.MonthlyTotalDue</div>
            </section>

        </section>

        <div class="card__chart-container">
            <canvas class="card__deficit-chart"></canvas>
        </div>

    </section>


</article>
